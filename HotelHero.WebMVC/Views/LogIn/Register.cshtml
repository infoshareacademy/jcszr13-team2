@using HotelHero.WebMVC.ViewModels
@model RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control me-2" placeholder="example@example.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="PasswordConfirmation" class="control-label"></label>
                <input asp-for="PasswordConfirmation" class="form-control" type="password" />
                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Next" class="btn btn-outline-success me-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Search" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
