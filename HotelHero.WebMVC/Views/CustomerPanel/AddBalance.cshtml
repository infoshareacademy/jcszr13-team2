@model HotelHero.WebMVC.Models.CustomerData

@{
    ViewData["Title"] = "AddBalance";
}

<h1>Add balance</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBalance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="Balance" class="control-label"></label>: @Model.Balance
                <input type="text" name="amount" inputmode="numeric" pattern="[0-9],[0-9]{1-2}" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                Card number
                <input type="text" name="Card Number" inputmode="numeric" pattern="[0-9]{16}" class="form-control" />
            </div>
            <div class="form-group p-2">
                Expiration date (format MM/YY)
                <input type="text" name="Expiration date" pattern="[0-1]{1}[0-9]{1}/[0-9]{2}" class="form-control" />
            </div>
            <div class="form-group p-2">
                CVC (np.123)
                <input type="text" name="CVC" inputmode="numeric" pattern="[0-9]{3}" class="form-control" />
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Save" class="btn btn-outline-success me-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Wallet">Back to List</a>
</div>

