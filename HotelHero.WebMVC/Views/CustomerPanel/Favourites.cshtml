@model IEnumerable<HotelHero.WebMVC.Models.Hotel>

@{
    ViewData["Title"] = "Favourites";
}

<div class="container">
    <div class="row">
        <div class="col-md-auto">

            <div class="list-group">
                <button type="button" class="list-group-item list-group-item-action list-group-item-info">
                    <a class="btn" asp-action="CustomerData">Customer Data</a>
                </button>

                <button type="button" class="list-group-item list-group-item-action list-group-item-info">
                    <a class="btn" asp-action="Reservations">Your reservations</a>
                </button>

                <button type="button" class="list-group-item list-group-item-action list-group-item-info">
                    <a class="btn" asp-action="PaymentsHistory">Payments history</a>
                </button>

                <button type="button" class="list-group-item list-group-item-action list-group-item-info">
                    <a class="btn" asp-action="Wallet">Your wallet</a>
                </button>

                <button type="button" class="list-group-item list-group-item-action list-group-item-info active">
                    <a class="btn" asp-action="Favourites">Favourites</a>
                </button>
            </div>

        </div>
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <label asp-for="First().Name"></label>
                        </th>
                        <th>
                            <label asp-for="First().Address"></label>
                        </th>
                        <th>
                            <label asp-for="First().City"></label>
                        </th>
                        <th>
                            <label asp-for="First().Description"></label>
                        </th>
                        <th>
                            <label asp-for="First().Stars"></label>
                        </th>
                        <th>
                            <label asp-for="First().Rating"></label>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.City
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.CreateStars()
                            </td>
                            <td>
                                @item.Rating
                            </td>
                            <td>
                                <a asp-action="FavouriteDetails" asp-route-id="@item.Id">Details</a>
                                <a asp-action="Unfavourite" asp-route-id="@item.Id">Unfavourite</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
