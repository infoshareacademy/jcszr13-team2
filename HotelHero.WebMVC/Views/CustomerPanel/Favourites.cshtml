@model IEnumerable<HotelHero.WebMVC.Models.Hotel>

@{
    ViewData["Title"] = "Favourites";
}

<div class="container">
    <div class="row">
        <aside class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 200px">
            <a class="d-flex flex-column align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom">
                <span class="fs-5">Menu</span>
            </a>
            <ul class="list-unstyled ps-0">
                <li>
                    <a class="btn text-decoration-none" asp-action="CustomerData">Customer data</a>
                </li>
                <li class="nav-item">
                    <a class="btn text-decoration-none" asp-action="Reservations">Your reservations</a>
                </li>
                <li class="nav-item">
                    <a class="btn text-decoration-none" asp-action="PaymentsHistory">Payments history</a>
                </li>
                <li class="nav-item">
                    <a class="btn text-decoration-none" asp-action="Wallet">Your wallet</a>
                </li>
                <li class="nav-item">
                    <a class="btn text-decoration-none" asp-action="Favourites">Favourites</a>
                </li>
            </ul>
        </aside>
        <div class="col">
            <h1>Favourities</h1>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <label>Hotel</label>
                        </th>

                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                Hotel: @item.Name
                                @item.CreateStars()
                                <br />
                                Address: @item.Address, @item.City
                            </td>
                            <td>
                                <a class="btn btn-outline-primary me-2" asp-action="FavouriteDetails" asp-route-id="@item.Id">Details</a>
                                <div id="@item.Id" popover="manual" style="background: linear-gradient(to top right, #66ff99 0%, #0000ff 100%);">
                                    <p style="color: white">Do you want to remove the Hotel from your favorites?</p>
                                    <a class="btn btn-outline-primary me-2" style="color: white; border-color:white; border-width:2px" asp-action="Unfavourite" asp-route-id="@item.Id">Yes, I'm removing it</a>
                                    <button class="btn btn-outline-primary me-2" style="color: white; border-color:white; border-width:2px" popovertarget="@item.Id" popovertargetaction="hide">I changed my mind</button>
                                </div>
                                <button class="btn btn-outline-primary me-2"popovertarget="@item.Id" popovertargetaction="show">Unfavourite</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
