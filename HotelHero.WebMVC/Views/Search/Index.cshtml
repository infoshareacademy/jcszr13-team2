@using HotelHero.WebMVC.ViewModels
@model SearchViewModel;

@{
    ViewData["Title"] = "Search panel";
}

<h1>Search panel</h1>

<form class="d-flex" method="post" asp-action="Results">
    <div class="form-group me-2">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control me-2" type="search" placeholder="City" aria-label="City" />
    </div>
    <div class="form-group me-2">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group me-2">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
    </div>
    <div class="form-group me-2">
        <label asp-for="PeopleAmount" class="control-label"></label>
        <input asp-for="PeopleAmount" class="form-control me-2" type="search" placeholder="Amount of people" aria-label="Amount of people" />
    </div>
    <div>
        <button class="btn btn-outline-primary me-2 align-baseline" type="submit">Search</button>
    </div>

</form>
