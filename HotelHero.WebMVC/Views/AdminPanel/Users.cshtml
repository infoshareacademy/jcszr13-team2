@model IEnumerable<HotelHero.WebMVC.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <div class="row">
        <aside class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 200px">
            <a class="d-flex flex-column align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom">
                <span class="fs-5">Menu</span>
            </a>
            <ul class="list-unstyled ps-0">
                <li>
                    <a class="btn text-decoration-none" asp-controller="AdminPanel" asp-action="Users">Users</a>
                </li>
                <li class="nav-item">
                    <a class="btn text-decoration-none" asp-controller="AdminPanel" asp-action="AdditionalServicesList">Additional services</a>
                </li>
            </ul>
        </aside>
        <div class="col">
            <h1>Users</h1>

            <p>
                <a asp-action="CreateUser">Create new user</a>
            </p>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <label asp-for="First().Email">Email</label>
                        </th>
                        <th>
                            <label asp-for="First().Password">Password</label>
                        </th>
                        <th>
                            <label asp-for="First().UserRole">User role</label>
                        </th>
                        <th>
                            <label>Actions</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Password
                            </td>
                            <td>
                                @item.UserRole
                            </td>
                            <td>
                                <div id="@item.UserId" popover="manual">
                                    <p>Do you want to remove user?</p>
                                    <a class="btn btn-outline-success me2" asp-action="DeleteUser" asp-route-id="@item.UserId">Confirm</a>
                                    <button class="btn btn-outline-success me2" popovertarget="@item.UserId" popovertargetaction="hide">Cancel</button>
                                </div>

                                <a asp-action="EditUser" asp-route-id="@item.UserId">
                                    <img src="https://cdn.pixabay.com/photo/2022/01/11/21/48/edit-6931553_640.png" height="35" width="35" />
                                </a>
                                <button class="border-0" popovertarget="@item.UserId" popovertargetaction="show">
                                    <img src="https://t4.ftcdn.net/jpg/03/46/38/39/360_F_346383913_JQecl2DhpHy2YakDz1t3h0Tk3Ov8hikq.jpg" height="35" width="35" />
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>