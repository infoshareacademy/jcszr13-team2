@model HotelHero.HotelsDatabase.Hotel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2>@Model.Name</h2>
    <dl class="row">
        <dt class="col-sm-2">
            <picture>
                <img src="@Model.Image" />
            </picture>
        </dt>
        <dt class="col-sm-2">
            <label asp-for="Address"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Address, @Model.City
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Stars"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.CreateStars() 
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Rating"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
    </dl>
</div>
<div>
    @if (Model.IsFreeWiFi)
    {
        <dd class="col-sm-2">
            Darmowe Wifi
        </dd>
    }
    @if (Model.IsPrivateParking)
    {
        <dd class="col-sm-2">
            Prywatny parking
        </dd>
    }
    @if (Model.IsRestaurant)
    {
        <dd class="col-sm-2">
            Restauracja czynna od 8.00 do 22.00
        </dd>
    }
    @if (Model.IsBar)
    {
        <dd class="col-sm-2">
            Bar otwarty całą dobę
        </dd>
    }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
