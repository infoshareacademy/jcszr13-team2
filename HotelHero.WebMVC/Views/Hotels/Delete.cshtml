@model HotelHero.WebMVC.Models.Hotel;

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this hotel?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Address"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Address
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="City"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.City
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Stars"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.CreateStars()
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Rating"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Rating
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div id="popover2" popover="manual" style="background: linear-gradient(to top right, #66ff99 0%, #0000ff 100%);">
            <p style="color: white">Are you sure you want to delete the hotel?</p>
            <input type="submit" value="Confirm" style="color: white; border-color:white; border-width:2px" class="btn btn-outline-success me-2" />
            <button class="btn btn-outline-success me2" style="color: white; border-color:white; border-width:2px" popovertarget="popover2" popovertargetaction="hide">Cancel</button>
        </div>
        <input type="button" value="Delete" class="btn btn-outline-danger me-2" popovertarget="popover2" popovertargetaction="show" />
        
        <div class="form-group p-2">
        <a class="btn btn-outline-danger me-2" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
