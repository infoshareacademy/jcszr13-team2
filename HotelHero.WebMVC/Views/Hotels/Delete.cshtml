@model HotelHero.WebMVC.Models.Hotel;

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this hotel?</h3>
<div>
    <h4>Hotel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Address"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Address
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="City"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.City
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Stars"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.CreateStars()
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Rating"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Rating
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
