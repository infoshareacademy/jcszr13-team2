@model IEnumerable<HotelHero.HotelsDatabase.Hotel>

<h1>Hotels</h1>

@if (UserContext.GetUser()?.UserRole == HotelHero.UserPanel.Enums.UserRole.Admin)
{
    <p>
        <a class="btn btn-primary" style="background: linear-gradient(to top right, #66ff99 10%, #0000ff 100%);" asp-action="Create">Add new hotel</a>
    </p>
}
<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <partial name="_HotelCard" , model="item" />
        }
    </tbody>
</table>
