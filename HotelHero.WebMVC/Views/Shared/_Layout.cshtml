<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelHero</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelHero.WebMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary bg-opacity-60  border-bottom box-shadow mb-3" style="background: linear-gradient(to top right, #66ff99 0%, #0000ff 100%);">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Search" asp-action="Index">H👽TEL HERO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Search" asp-action="Index">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="LogIn" asp-action="LogIn">User Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hotels" asp-action="Index">Hotels Database</a>
                        </li>
                        @if (UserContext.GetUser() != null && UserContext.GetUser()?.UserRole != HotelHero.UserPanel.Enums.UserRole.Admin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CustomerPanel" asp-action="CustomerPanel">Customer Panel</a>
                            </li>
                        }

                        @if (UserContext.GetUser()?.UserRole == HotelHero.UserPanel.Enums.UserRole.Admin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="AdminPanel" asp-action="Index">Administrator Panel</a>
                            </li>
                        }
                    </ul>
                </div>
                <div>
                    <span class="text-white">Logged: @UserContext.GetUser()?.Email </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
    </div>

    <footer class="border-top footer text-muted" style="vertical-align:bottom">
        <div class="container">
			&copy; 2024 - H👽telHero
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
